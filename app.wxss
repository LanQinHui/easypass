/* colorui样式组件 */
@import"components/colorui/icon.wxss";
@import"components/colorui/main.wxss";

/* 在微信小程序中 不支持通配符 '*' */
page,view,text,swiper,swiper-item,image,navigator{
    padding: 0;
    margin: 0;
    box-sizing: border-box;
}

/* 主题颜色 通过变量来实现 
1、less 中 存在 变量这个知识
2、原生的css和wxss也是支持 变量
*/
page{
    /* 定义主题颜色 */
    --themeColor: #19AAFD;
    /* 定义统一的字体大小 */
    font-size: 28rpx;
}


